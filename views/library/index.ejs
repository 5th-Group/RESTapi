<h2>Books list</h2>
<h3>Search Bar</h3>
<form action="/library" method="GET">
    <label>Name</label>
    <input type="text" name="title" value="<%= searchDetail.title%>">
    <button type="submit">Search</button>
</form>
<a href="/books/new"><input type="button" value="Add Book"></a>
<a href="/books/genres/new"><input type="button" value="Add Genre"></a>
<a href="/covers"><input type="button" value="List of books' covers"></a>
<br>
<br>
<% products.forEach(product => { %>
    <div>
        <a href="/library/detail/<%=product.id%>"><img src="<%= product.detail.icon %>" width="100" height="150"></a>
        <a href="/library/detail/<%= product.id %>/edit"><input type="button" value="Edit"></a>
        <%- include("../partials/delete_form.ejs", 
                    {url: `/library/detail/${product.id}`}) %>
    </div>
<% })%> 