<div>
    <label for="name">Name</label>
    <input type="text" name="name" value="<%= publisher.name %>">
</div>
<div>
    <label for="country">Country</label>
    <select name="country" id="country">
        <% countries.forEach( country => { %> 
            <% if (country._id === publisher.country) { %> 
                <option selected label="<%= country.name %>" value="<%= country._id %>">
            <% } else { %>
                <option label="<%= country.name %>" value="<%= country._id %>">
            <% } %> 
        <% }) %>
    </select>
</div>
<div>
    <label for="address">Address</label>
    <input type="text" name="address" value="<%= publisher.contact.address %>">
</div>
<div>
    <label for="phoneNumber">Phone Number</label>
    <input type="text" name="phoneNumber" value="<%= publisher.contact.phoneNumber %>">
</div>
<div>
    <label for="email">Email</label>
    <input type="text" name="email" value="<%= publisher.contact.email %>">
</div>
<div>
    <label for="twitter">Twitter</label>
    <input type="text" name="twitter" value="<%= publisher.contact.twitter %>">
</div>
<div>
    <label for="facebook">Facebook</label>
    <input type="text" name="facebook" value="<%= publisher.contact.facebook %>">
</div>