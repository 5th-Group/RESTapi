<h2>Books list</h2>
<h3>Search Bar</h3>
<form action="/books" method="GET">
    <label>Name</label>
    <input type="text" name="title" value="<%= searchDetail.title%>">
    <button type="submit">Search</button>
</form>
<a href="/books/new"><input type="button" value="Add Book"></a>
<a href="/books/genres/new"><input type="button" value="Add Genre"></a>
<a href="/covers"><input type="button" value="Go to book's covers"></a>
<br>
<br>
<% products.forEach(product => { %>
    <div>
        <a href="/books/detail/<%=product._id%>"><img src="<%= product.detail.icon %>" width="100" height="150"></a>
        <h4><%= product.price%> VND</h4>
        <a href="/books/detail/<%= product._id %>/edit"><input type="button" value="Edit"></a>
        <%- include("../partials/delete_form.ejs", 
            {url: `/books/detail/${product._id}`}) %>

    </div>
<% })%> 